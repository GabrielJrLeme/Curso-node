<h2 class="mt-3">Postagens recentes</h2>    

{{#each postagens}}
    <div class="card mt-4">
        <h5 class="card-header">{{titulo}}
            <a href="/postagem/{{slug}}"><button class="btn btn-outline-secondary btn-sm float-right">Leia mais</button></a>
        </h5>
    <div class="card-body">
        <p class="card-title">{{categoria.nome}}</small>
        <hr>
        <small class="card-text">{{descricao}}</small>
    </div>
    </div>
{{else}}
    <div class="alert alert-warning mt-3" role="alert">
        <h4>Nenhuma postagem registrada</h4>
    </div>
{{/each}}