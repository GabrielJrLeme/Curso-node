
<h2>Crie sua conta hoje!!</h2>

<hr>

{{#each erro}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card rounded shadow p-3 mb-5 bg-white rounded text-center" style="width: 500px; margin:auto;">


    <form action="/usuarios/registro" method="POST">

        <label for="nome">Nome:</label>
        <input type="text" id="nome" name="nome" class="form-control" required>

        <br>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" class="form-control" required>

        <br>

        <label for="senha">Senha:</label>
        <input type="password" id="senha" name="senha" class="form-control" required>

        <br>

        <label for="senha2">Repita sua senha:</label>
        <input type="password" id="senha2" name="senha2" class="form-control" required>

        <br>

        <button type="submit" class="btn btn-outline-success">Cadastrar-me</button>

    </form>

</div>