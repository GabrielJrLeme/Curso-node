<h2>Lista de Categorias</h2>

<hr>
<a href="/admin/categorias/add"><button type="button" class="btn btn-primary">Adicionar</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>Nome: {{nome}}</h4>
            <small>Slug: {{slug}}</small>
            <br>
            <small>Data de criação: {{date}}</small> 
            <br>
            <a href="/admin/categoria/edit/{{_id}}"><button class="btn btn-success mt-4">Editar</button></a>

            <form action="/admin/categorias/deletar" method="POST">

                <input type="hidden" id="id" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar</button>
                
            </form>
        </div>
    </div>

{{else}}
    <div class="alert alert-warning mt-3" role="alert">
    <h4>Nenhuma categoria registrada</h4>
    </div>
{{/each}}