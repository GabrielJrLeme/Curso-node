    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h2>Editar Categoria</h2>

<div class="card">
    <div class="card-body">
        <form action="/admin/categoria/edit" method="POST">
            <input type="hidden" name="id" id="id" value="{{categoria._id}}">

            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" value="{{categoria.nome}}" placeholder="Nome da Categoria" class="form-control">

            <label for="slug">Slug:</label>
            <input type="text" name="slug" id="slug" value="{{categoria.slug}}" placeholder="Slug da Categoria" class="form-control">
            <br>
            <button type="submit" class="btn btn-primary">Confirmar</button>

        </form>
    </div>
</div>